{
    "name": "your-vendor/lazy-pagination",
    "description": "A simple and efficient lazy loading pagination component for Laravel applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^9.0|^10.0",
        "livewire/livewire": "^2.0|^3.0"
    },
    "autoload": {
        "psr-4": {
            "YourVendor\\LazyPagination\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YourVendor\\LazyPagination\\LazyPaginationServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 